@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<div class="row">
    <div class="col-md-3">
        <div class="widget widget-blue">
            <div class="widget-title">Toplam Kategori Sayısı</div>
            <div class="widget-content">@ViewBag.totalCategory</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="widget widget-green">
            <div class="widget-title">"YAZILIM" Kategorisine Ait Başlık Sayısı</div>
            <div class="widget-content">@ViewBag.heading</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="widget widget-yellow">
            <div class="widget-title">Yazar Adında "A" Harfi Geçen Yazar Sayısı</div>
            <div class="widget-content">@ViewBag.author</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="widget widget-red">
            <div class="widget-title">En Fazla Başlığa Sahip Kategori Adı</div>
            <div class="widget-content">@ViewBag.maxCategory</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="widget widget-purple">
            <div class="widget-title">Durumu True Olan ve False Olan Kategoriler Arasındaki Fark</div>
            <div class="widget-content">@ViewBag.status</div>
        </div>
    </div>
</div>

<style>
    .row {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        margin-left: 20px; /* Sidebar ile araya boşluk bırakmak için */
    }

    .widget {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 250px;
        min-height: 150px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .widget-title {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 8px;
        color: white;
        padding: 5px;
        border-radius: 5px;
    }

    .widget-content {
        font-size: 20px;
        color: #007bff;
    }

    /* Başlık renkleri */
    .widget-blue .widget-title {
        background-color: #007bff;
    }

    .widget-green .widget-title {
        background-color: #28a745;
    }

    .widget-yellow .widget-title {
        background-color: #ffc107;
    }

    .widget-red .widget-title {
        background-color: #dc3545;
    }

    .widget-purple .widget-title {
        background-color: #6f42c1;
    }
</style>
